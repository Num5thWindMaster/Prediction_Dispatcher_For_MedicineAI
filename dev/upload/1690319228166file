from threading import Thread

SUM = 0
SIZE = 1000000


def work1():
    global SUM
    for i in range(SIZE):
        SUM += 1


def work2():
    global SUM
    for i in range(SIZE):
        SUM += 1


if __name__ == '__main__':
    t1 = Thread(target=work1)
    t2 = Thread(target=work2)
    t1.start()
    t2.start()
    t1.join()
    t2.join()
    print(f'SUM = {SUM}')
